<?xml version="1.0" encoding="utf-8"?>
<com.nd.commplatform.widget.goods.NdGoodsListItem
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/nd3_user_item_bg"
  android:paddingBottom="@dimen/nd3_margin_size">
  
  <RelativeLayout
  android:layout_width="@dimen/nd_goods_flag_w"
  android:layout_height="wrap_content"
  android:layout_alignParentLeft="true"
  android:layout_alignParentTop="true"
  android:id="@+id/nd_head_rl"
  >
	  <ImageView
	  android:id="@+id/nd_goods_image"
	  android:layout_width="@dimen/nd3_image_size"
	  android:layout_height="@dimen/nd3_image_size"
	  android:scaleType="fitXY"
	  android:layout_alignParentTop="true"
	  android:layout_centerHorizontal="true"
	  android:layout_marginTop="@dimen/nd3_margin_size"/>
	  <ImageView
	  android:id="@+id/nd_goods_flag_image"
	  android:layout_width="@dimen/nd_goods_flag_w"
	  android:layout_height="@dimen/nd_goods_flag_h"
	  android:layout_alignBottom="@id/nd_goods_image"
	  android:layout_alignParentLeft="true"/>
   </RelativeLayout>
  
  <ImageView
  android:id="@+id/nd_goods_action_btn"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/nd3_switch_image"
  android:layout_marginTop="@dimen/nd3_margin_size"
  android:layout_marginBottom="@dimen/nd3_margin_size"
  android:layout_marginLeft="@dimen/nd3_margin_size"
  android:layout_marginRight="8dip"
  android:layout_alignParentRight="true"
  android:layout_centerVertical="true"/>
  
  <RelativeLayout
  android:id="@+id/nd_goods_item_content_rl"
  android:layout_width="0dip"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@id/nd_head_rl"
  android:layout_toLeftOf="@+id/nd_goods_action_btn"
  android:layout_alignTop="@id/nd_head_rl"
  android:layout_marginBottom="@dimen/nd3_margin_size">
	  <TextView
	  android:id="@+id/nd_goods_name_txt"
	  android:layout_width="0dip"
	  android:layout_height="wrap_content"
	  android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/nd_goods_price_txt"
      android:maxLines="1"
      android:singleLine="true"
      android:ellipsize="end"  
      style="@style/nd3_textview_1"/> 
      <TextView
	  android:id="@+id/nd_goods_price_txt"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_alignParentRight="true"
      android:layout_alignTop="@id/nd_goods_name_txt"
      android:maxLines="1"
      android:singleLine="true"
      android:ellipsize="end"
      android:textSize="16sp"
      android:textColor="@color/nd3_black"/> 
	  <TextView
	  android:id="@+id/nd_goods_content"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_alignLeft="@id/nd_goods_name_txt"
	  android:layout_below="@id/nd_goods_name_txt"
	  android:maxLines="2"
      android:ellipsize="end"  
	  style="@style/nd3_textview_2"/>
  </RelativeLayout>
</com.nd.commplatform.widget.goods.NdGoodsListItem>

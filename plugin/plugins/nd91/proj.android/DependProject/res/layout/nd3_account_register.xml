<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nd3_account_register_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation ="vertical"
	android:fillViewport="true"
	>
	
	<!-- 标题栏 -->
	<RelativeLayout
        android:id="@+id/nd3_account_register_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nd3_title_bar_bg" >
		
	    <!-- 登录 -->
		<Button 
			android:id="@+id/nd3_account_register_login"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:textColor="@color/nd3_btn_font_color"
			android:text="@string/nd3_account_login_button_right"
			android:background="@drawable/nd3_title_bar_return_btn_xml"
			android:layout_margin="10dip"
			/>
		
		<!-- 标题 -->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/nd3_account_register_title"
			style="@style/nd3_textview_0"
			>
		
		</TextView>	

	    <!-- 完成 -->		    		
		<Button 
			android:id="@+id/nd3_account_register_complete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textSize="16sp"
			android:textColor="@color/nd3_btn_font_color"
			android:text="@string/nd3_account_register_button_right"
			android:background="@drawable/nd3_title_bar_action_btn_xml"
			android:layout_margin="10dip"
			android:padding="5dip"
			/>	    
    </RelativeLayout>
    
	<!-- 内容 -->
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		>

		<!-- 快速注册 -->		
		<include 
		    android:id="@+id/nd3_account_register_quick"
		    layout="@layout/nd3_account_register_quick"
		    />
		
	</ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nd3_more_permission_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation ="vertical"
	>
	
	<!-- 添加好友 -->
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/nd_more_permission_friend"
		android:textColor="@color/nd3_white"
		android:textSize="@dimen/nd3_btn_text_size"
		android:textStyle="bold"
		android:layout_marginTop="@dimen/nd3_option_margin_top"
		android:layout_marginBottom="5dip"
		style="@style/nd3_option_margin_style"
		>
	</TextView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation ="vertical"
		android:background="@drawable/nd3_bk1"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		style="@style/nd3_option_margin_style"		
		>
		
		<!-- 需要验证 -->
		<LinearLayout
			android:id="@+id/nd3_more_permission_check"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation ="horizontal"
			android:gravity="center_vertical"
			style="@style/nd3_option_item_margin_style"			
			>
			
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/nd3_more_permission_check"
				style="@style/nd3_option_textview_style"
				>
			</TextView>

			<ImageView
				android:id="@+id/nd3_more_permission_check_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"	
				android:src="@drawable/nd3_icon_07"		
				>
			</ImageView>
							
		</LinearLayout>

		<!-- 分隔线 -->
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/nd3_horizontal_line"
			>
		
		</ImageView>	
		
		<!-- 允许任何人 -->
		<LinearLayout
			android:id="@+id/nd3_more_permission_yes"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation ="horizontal"
			android:gravity="center_vertical"
			style="@style/nd3_option_item_margin_style"			
			>
			
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/nd3_more_permission_yes"
				style="@style/nd3_option_textview_style"
				>
			</TextView>

			<ImageView
				android:id="@+id/nd3_more_permission_yes_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"		
				android:src="@drawable/nd3_icon_07"	
				>
			</ImageView>
							
		</LinearLayout>

		<!-- 分隔线 -->
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/nd3_horizontal_line"
			>
		
		</ImageView>	
		
		<!-- 不允许任何人 -->
		<LinearLayout
			android:id="@+id/nd3_more_permission_no"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:orientation ="horizontal"
			android:gravity="center_vertical"
			style="@style/nd3_option_item_margin_style"			
			>
			
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/nd3_more_permission_no"
				style="@style/nd3_option_textview_style"
				>
			</TextView>

			<ImageView
				android:id="@+id/nd3_more_permission_no_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"		
				android:src="@drawable/nd3_icon_07"	
				>
			</ImageView>
							
		</LinearLayout>
						
	</LinearLayout>

	<!-- 支付密码 -->
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/nd_more_permission_pay_pwd"
		android:textColor="@color/nd3_white"
		android:textSize="@dimen/nd3_btn_text_size"
		android:textStyle="bold"
		android:layout_marginTop="@dimen/nd3_option_margin_top"
		android:layout_marginBottom="5dip"
		android:visibility="visible"
		style="@style/nd3_option_margin_style"
		>
	</TextView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation ="horizontal"
		android:gravity="center_vertical"
		android:background="@drawable/nd3_bk1"
		android:layout_marginBottom="0dip"
		android:visibility="visible"
		style="@style/nd3_option_margin_padding_style"
		>
		
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/nd_more_permission_pay_pwd_tip"
			style="@style/nd3_option_textview_style"
			>
		</TextView>

		<com.nd.commplatform.widget.NdCheckBox
			android:id="@+id/nd_more_permission_pay_pwd_check"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@drawable/nd3_checkbox_button"
			>
		</com.nd.commplatform.widget.NdCheckBox>
						
	</LinearLayout>	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/nd_more_permission_pay_pwd_content"
		android:textColor="@color/nd3_white"
		android:textSize="@dimen/nd3_pay_tip_text_size"
		android:textStyle="bold"
		android:layout_marginTop="5dip"
		android:visibility="visible"
		style="@style/nd3_option_margin_style"
		>
	</TextView>
	
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.nd.commplatform.uap.widget.NdActivityDescriptionPlusImageView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <!-- 文本-1 -->
  <com.nd.commplatform.widget.NdTextView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:id="@+id/nd3_activity_content_reg_1"
  android:layout_alignParentTop="true"
  android:textColor="@color/nd3_black"/>
  
  <!-- 头像 -->
  <ImageView
  android:id="@+id/nd3_activity_content_reg_2"
  android:layout_width="@dimen/nd3_image_size"
  android:layout_height="@dimen/nd3_image_size"
  android:layout_alignParentLeft="true"
  android:layout_below="@id/nd3_activity_content_reg_1"
  android:scaleType="fitXY"
  android:paddingTop="@dimen/nd3_margin_size"
  android:layout_alignWithParentIfMissing="true"/>
  
  <!-- 文本-2 -->
  <TextView
  android:id="@+id/nd3_activity_content_reg_3"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/nd3_margin_size"
  android:textColor="@color/nd3_black"
  android:paddingBottom="@dimen/nd3_margin_size"
  android:layout_below="@id/nd3_activity_content_reg_2"
  android:layout_alignWithParentIfMissing="true"/>
</com.nd.commplatform.uap.widget.NdActivityDescriptionPlusImageView>

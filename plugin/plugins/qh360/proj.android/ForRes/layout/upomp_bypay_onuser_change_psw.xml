<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rl_edit_pass" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/upomp_bypay_bg"
	android:layout_marginBottom="35dip" android:layout_marginLeft="15dip"
	android:layout_marginRight="15dip" android:layout_marginTop="35dip">
	<LinearLayout android:focusable="true"
		android:focusableInTouchMode="true" android:layout_width="0dip"
		android:layout_height="0dip" />

	<RelativeLayout android:id="@+id/rl_header_change_psw"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_title_bg">
		<Button android:id="@+id/btn_return_change_psw"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/upomp_bypay_btn_title_esc"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip"
			android:layout_marginTop="5dip" android:textColor="#ffffffff"
			android:text="@string/upomp_bypay_return" />
	</RelativeLayout>




	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/rl_header_change_psw"
		android:layout_above="@+id/rl_bottom_change_psw">
		<RelativeLayout android:id="@+id/rl_body_change_psw"
			android:layout_width="fill_parent" android:layout_height="wrap_content">




			<RelativeLayout android:id="@+id/rl_userpass_old_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_input_bg"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip">

				<TextView android:id="@+id/tv_userpass_old_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:text="@string/upomp_bypay_editpass_oldpsw"
					android:textColor="#6a7482" android:textSize="15sp"
					android:layout_centerVertical="true" />

				<Button android:id="@+id/btn_userpass_old_change_psw"
					android:layout_width="fill_parent" android:layout_height="45dip"
					android:hint="@string/upomp_bypay_editpass_oldpswhint"
					android:textColor="#6a7482" android:gravity="left|center_vertical"
					android:background="#00000000" android:layout_toRightOf="@+id/tv_userpass_old_change_psw" />
			</RelativeLayout>
			<RelativeLayout android:id="@+id/rl_userpass_new_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/rl_userpass_old_change_psw"
				android:layout_marginTop="8dip" android:background="@drawable/upomp_bypay_input_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<TextView android:id="@+id/tv_userpass_new_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:text="@string/upomp_bypay_newpsw"
					android:layout_centerVertical="true" android:textColor="#6a7482"
					android:textSize="15sp" />

				<Button android:id="@+id/btn_userpass_new_change_psw"
					android:layout_width="fill_parent" android:layout_height="45dip"
					android:hint="@string/upomp_bypay_sixtotwelve" android:textColor="#6a7482"
					android:gravity="left|center_vertical" android:background="#00000000"
					android:layout_toRightOf="@+id/tv_userpass_new_change_psw" />

			</RelativeLayout>
			<RelativeLayout android:id="@+id/rl_userpass_re_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/rl_userpass_new_change_psw"
				android:layout_marginTop="8dip" android:background="@drawable/upomp_bypay_input_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<TextView android:id="@+id/tv_userpass_re_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/upomp_bypay_enternewpsw"
					android:layout_centerVertical="true" android:textColor="#6a7482"
					android:layout_marginLeft="10dip" android:textSize="15sp" />

				<Button android:id="@+id/btn_userpass_re_change_psw"
					android:layout_width="fill_parent" android:layout_height="45dip"
					android:hint="@string/upomp_bypay_sixtotwelve" android:textColor="#6a7482"
					android:gravity="left|center_vertical" android:background="#00000000"
					android:layout_toRightOf="@+id/tv_userpass_re_change_psw" />

			</RelativeLayout>
			<ImageView android:id="@+id/iv_top_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top2"
				android:layout_marginTop="8dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" android:layout_below="@id/rl_userpass_re_change_psw" />
			<RelativeLayout android:id="@+id/rl_telnum_old_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/iv_top_change_psw" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
				<RelativeLayout android:id="@+id/rl_iv_change_psw"
					android:layout_width="40dip" android:layout_height="40dip"

					android:background="@drawable/upomp_bypay_info_left">
					<ImageView android:id="@+id/iv_change_psw"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true" android:background="@drawable/upomp_bypay_info_icon5" />
				</RelativeLayout>
				<TextView android:id="@+id/tv_telnum_title_old_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center_vertical" android:text="@string/upomp_bypay_firstmobilenum"
					android:textSize="15sp" android:textColor="#6a7482"
					android:layout_marginLeft="10dip" android:layout_toRightOf="@+id/rl_iv_change_psw"
					android:layout_centerVertical="true" />

				<TextView android:id="@+id/tv_telnum_content_old_change_psw"
					android:singleLine="true" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:numeric="integer"
					android:maxLength="11" android:textColor="#6a7482"
					android:layout_centerVertical="true" android:textSize="15sp"
					android:background="#00000000" android:layout_toRightOf="@+id/tv_telnum_title_old_change_psw" />

			</RelativeLayout>
			<ImageView android:id="@+id/iv_bot_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot2"
				android:layout_below="@id/rl_telnum_old_change_psw"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />
			<RelativeLayout android:id="@+id/rl_validcode_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/iv_bot_change_psw"
				android:layout_marginTop="8dip" android:background="@drawable/upomp_bypay_input_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<TextView android:id="@+id/tv_validcode_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/upomp_bypay_firstshortmessagesecuritycode"
					android:gravity="center_vertical" android:textColor="#6a7482"
					android:layout_marginLeft="10dip" android:textSize="15sp"
					android:layout_centerVertical="true" />

				<EditText android:id="@+id/et_validcode_change_psw"
					android:singleLine="true" android:layout_width="fill_parent"
					android:layout_height="45dip" android:numeric="integer"
					android:textSize="15sp" android:maxLength="6" android:textColor="#6a7482"
					android:hint="@string/upomp_bypay_secondshortmessagesecuritycode"
					android:background="#00000000" android:layout_toRightOf="@+id/tv_validcode_change_psw"
					android:layout_toLeftOf="@+id/btn_validcode_change_psw"
					android:layout_centerVertical="true" />

				<Button android:id="@+id/btn_validcode_change_psw"
					android:layout_width="wrap_content" android:layout_height="45dip"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true" android:layout_marginLeft="5dip"
					android:background="@drawable/upomp_bypay_input_btn4" android:text="@string/upomp_bypay_get"
					android:textSize="15sp" android:textColor="#6a7482" />

			</RelativeLayout>
			<RelativeLayout android:id="@+id/rl_button_change_psw"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/rl_validcode_change_psw"
				android:layout_marginTop="20dip">
				<Button android:id="@+id/btn_button_change_psw"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/upomp_bypay_btn_enter2"
					android:layout_marginLeft="10dip" android:text="@string/upomp_bypay_affirm"
					android:textColor="#FFFFFF" android:textSize="20sp" />
				
			</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
	<com.unionpay.upomp.bypay.view.About
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:paddingBottom="5dip" />
	<RelativeLayout android:id="@+id/main_dialog_change_psw"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/rl_header_change_psw" android:layout_above="@+id/rl_bottom_change_psw" />
	<RelativeLayout android:id="@+id/rl_bottom_change_psw"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_bottom"
		android:layout_alignParentBottom="true">
	</RelativeLayout>
	
</RelativeLayout>
<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:layout_marginBottom="35dip" android:layout_marginLeft="15dip"
	android:layout_marginRight="15dip" android:layout_marginTop="35dip"
	android:background="@drawable/upomp_bypay_bg">

	<RelativeLayout android:id="@+id/rl_header_pay_result_lose"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_title_bg">
		<Button android:id="@+id/btn_esc_result_lose"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/upomp_bypay_btn_title_esc"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip"
			android:layout_marginTop="5dip" android:textColor="#ffffffff"
			android:text="@string/upomp_bypay_pay_result_returnmerchant" />
	</RelativeLayout>


	<ScrollView android:id="@+id/sv_pay_result_lose"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/rl_header_pay_result_lose"
		android:layout_above="@+id/rl_bottom_pay_result_lose">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/iv_info_top_pay_result_lose"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top2"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" />

			<RelativeLayout android:id="@+id/rl_pay_result_lose"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bg"
				android:layout_below="@id/iv_info_top_pay_result_lose"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
				<RelativeLayout android:id="@+id/rl_iv_card_pay_result_lose"
					android:layout_width="40dip" android:layout_height="30dip"

					android:background="@drawable/upomp_bypay_info_left">
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true" android:background="@drawable/upomp_bypay_info_icon6" />
				</RelativeLayout>
				<RelativeLayout android:id="@+id/rl_result_pay_result_lose"
					android:layout_width="wrap_content" android:layout_height="30dip"
					android:layout_toRightOf="@+id/rl_iv_card_pay_result_lose"
					android:layout_marginLeft="5dip" android:gravity="center_vertical">
					<TextView android:id="@+id/tv_result_title_pay_result_lose"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/upomp_bypay_pay_result" android:gravity="right"
						android:textColor="#6a7482" android:textSize="14sp" />
					<TextView android:id="@+id/tv_result_content_pay_result_lose"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="@string/upomp_bypay_payfail"
						android:layout_toRightOf="@+id/tv_result_title_pay_result_lose"
						android:textColor="#ff0000" android:textSize="14sp" />
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/rl_info_pay_result_lose"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@id/rl_pay_result_lose" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1dip" android:background="#dbdee0"

					android:layout_marginRight="1dip" />
				<RelativeLayout android:id="@+id/rl_iv_info_pay_result_lose"
					android:layout_width="40dip" android:layout_height="90dip"

					android:background="@drawable/upomp_bypay_info_left">

				</RelativeLayout>
				<RelativeLayout android:id="@+id/rl_info_pay_result_lose"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/rl_iv_info_pay_result_lose">



					<RelativeLayout android:id="@+id/rl_orderinfo_info_pay_result_lose"
						android:layout_width="fill_parent" android:layout_height="90dip"
						android:gravity="center_vertical">
						<TextView android:id="@+id/tv_orderinfo_title_info_pay_result_lose"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="@string/upomp_bypay_failcause" android:textSize="14sp"
							android:textColor="#6a7482" android:layout_marginLeft="5dip" />
						<TextView android:id="@+id/tv_orderinfo_content_info_pay_result_lose"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							 android:layout_toRightOf="@+id/tv_orderinfo_title_info_pay_result_lose"
							android:textColor="#6a7482" android:textSize="14sp" />
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
			<ImageView android:id="@+id/iv_info_bot_pay_result_lose"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot2"
				android:layout_below="@id/rl_info_pay_result_lose"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />




			<Button android:id="@+id/btn_new_pay_result_lose"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="20sp" android:textColor="#ffffff"
				android:layout_marginTop="20dip" android:text="@string/upomp_bypay_pay_result_newpay"
				android:layout_below="@id/iv_info_bot_pay_result_lose"
				android:layout_centerHorizontal="true" android:background="@drawable/upomp_bypay_btn_enter2" />

		</RelativeLayout>

	</ScrollView>
	<com.unionpay.upomp.bypay.view.About
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:paddingBottom="5dip" />
	<RelativeLayout android:id="@+id/rl_bottom_pay_result_lose"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_bottom"
		android:layout_alignParentBottom="true">
	</RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:layout_marginBottom="35dip" android:layout_marginLeft="15dip"
	android:layout_marginRight="15dip" android:layout_marginTop="35dip"
	android:background="@drawable/upomp_bypay_bg">
	<LinearLayout android:focusable="true"
		android:focusableInTouchMode="true" android:layout_width="0dip"
		android:layout_height="0dip" />
	<RelativeLayout android:id="@+id/rl_header_onuser_tel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_title_bg">
		<Button android:id="@+id/btn_return_onuser_tel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/upomp_bypay_btn_title_esc"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip"
			android:layout_marginTop="5dip" android:textColor="#ffffffff"
			android:text="@string/upomp_bypay_return" />
	</RelativeLayout>


	<ScrollView android:id="@+id/sv_onuser_tel"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/rl_header_onuser_tel" android:layout_above="@+id/rl_bottom_onuser_tel">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<ImageView android:id="@+id/iv_top_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top3"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" />

			<RelativeLayout android:id="@+id/rl_info_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="80dip"
				android:layout_below="@id/iv_top_onuser_tel" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_name_onuser_tel"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toLeftOf="@+id/iv_info_right_onuser_tle">
					<TextView android:id="@+id/tv_name_title_onuser_tel"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="10dip" android:textColor="#6a7482"
						android:textSize="14sp" android:text="@string/upomp_bypay_username"
						android:layout_centerVertical="true" />
					<TextView android:id="@+id/tv_name_content_onuser_tel"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_toRightOf="@+id/tv_name_title_onuser_tel" />
				</RelativeLayout>
				<RelativeLayout android:id="@+id/rl_welcome_onuser_tel"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_below="@id/rl_name_onuser_tel"
					android:layout_toLeftOf="@+id/iv_info_right_onuser_tle">
					<ImageView android:layout_width="fill_parent"
						android:layout_height="1dip" android:background="#dbdee0"
						android:layout_marginLeft="1dip" />
					<TextView android:id="@+id/tv_welcome_title_onuser_tel"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="10dip" android:textColor="#6a7482"
						android:textSize="14sp" android:text="@string/upomp_bypay_welcome"
						android:layout_centerVertical="true" />
					<TextView android:id="@+id/tv_welcome_content_onuser_tel"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_toRightOf="@+id/tv_welcome_title_onuser_tel" />
				</RelativeLayout>
				<ImageView android:id="@+id/iv_info_right_onuser_tle"
					android:layout_width="50dip" android:layout_height="80dip"

					android:background="@drawable/upomp_bypay_info_right"
					android:layout_alignParentRight="true" />
				<Button android:id="@+id/btn_user_manage_onuser_tel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginTop="10dip" android:background="@drawable/upomp_bypay_info_btn2"
					android:layout_marginRight="5dip" />
				<RelativeLayout android:id="@+id/rl_hint_onuser_tel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_alignParentRight="true" android:background="@drawable/upomp_bypay_tips_bg"
					android:layout_below="@id/btn_user_manage_onuser_tel">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="@string/upomp_bypay_onuser_tel_in"
						android:textSize="12sp" android:textColor="#637681" android:layout_centerHorizontal="true" android:layout_marginTop="9dip"/>
				</RelativeLayout>
			</RelativeLayout>


			<ImageView android:id="@+id/iv_bot_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot3"
				android:layout_below="@id/rl_info_onuser_tel"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />

			<ImageView android:id="@+id/iv_pay_info_top_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top2"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" android:layout_below="@id/iv_bot_onuser_tel" />
			<RelativeLayout android:id="@+id/rl_card_info_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/iv_pay_info_top_onuser_tel"
				android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_card_onuser_tel"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toRightOf="@+id/iv_card_info_left_onuser_tle">

					<TextView android:id="@+id/tv_card_content_onuser_tel"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp" 
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_marginLeft="5dip" android:layout_toLeftOf="@+id/btn_change_card_onuser_tel" />

					<Button android:id="@+id/btn_change_card_onuser_tel"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginRight="5dip" android:layout_alignParentRight="true"
						android:background="@drawable/upomp_bypay_btn_card" />
				</RelativeLayout>

				<ImageView android:id="@+id/iv_card_info_left_onuser_tle"
					android:layout_width="40dip" android:layout_height="40dip"
					android:background="@drawable/upomp_bypay_info_left" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_centerVertical="true"
					android:background="@drawable/upomp_bypay_info_icon3"
					android:layout_marginLeft="10dip" />
			</RelativeLayout>


			<RelativeLayout android:id="@+id/rl_tel_info_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/rl_card_info_onuser_tel"
				android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_tel_onuser_tel"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toRightOf="@+id/iv_tel_info_right_onuser_tle">

					<TextView android:id="@+id/tv_tel_content_onuser_tel"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_marginLeft="5dip" android:layout_centerVertical="true"
						android:gravity="center_vertical"  />
				</RelativeLayout>
				

				<ImageView android:id="@+id/iv_tel_info_right_onuser_tle"
					android:layout_width="40dip" android:layout_height="40dip"
					android:background="@drawable/upomp_bypay_info_left" />
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1dip" android:background="#dbdee0"
					android:layout_marginRight="1dip" android:layout_marginLeft="1dip" />
				<Button android:id="@+id/btn_user_manage_onuser_tel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:layout_centerVertical="true" android:background="@drawable/upomp_bypay_info_icon5"
					android:layout_marginLeft="10dip" />
			</RelativeLayout>
			<ImageView android:id="@+id/iv_pay_info_bot_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot2"
				android:layout_below="@id/rl_tel_info_onuser_tel"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />


			<RelativeLayout android:id="@+id/rl_mobilevalidcode_onuser_tel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginTop="20dip" android:layout_below="@id/iv_pay_info_bot_onuser_tel"
				android:background="@drawable/upomp_bypay_input_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<TextView android:id="@+id/tv_mobilevalidcode_title_onuser_tel"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:textColor="#6a7482"
					android:textSize="14sp" android:layout_centerVertical="true"
					android:text="@string/upomp_bypay_firstshortmessagesecuritycode" />

				<EditText android:id="@+id/et_mobilevalidcode_content_onuser_tel"
					android:singleLine="true" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:numeric="integer"
					android:textSize="14sp" android:maxLength="6" android:textColor="#6a7482"
					android:hint="@string/upomp_bypay_secondshortmessagesecuritycode"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/tv_mobilevalidcode_title_onuser_tel"
					android:background="#00000000" android:layout_toLeftOf="@+id/btn_mobilevalidcode_content_onuser_tel" />
				<Button android:id="@+id/btn_mobilevalidcode_content_onuser_tel"
					android:layout_width="wrap_content" android:layout_height="45dip"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:layout_marginLeft="5dip"
					android:background="@drawable/upomp_bypay_input_btn4" android:text="@string/upomp_bypay_get"
					android:textSize="14sp" android:textColor="#6a7482" />

			</RelativeLayout>


			<Button android:id="@+id/btn_next_onuser_tel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/upomp_bypay_next" android:textColor="#ffffff"
				android:textSize="20dip" android:layout_below="@id/rl_mobilevalidcode_onuser_tel"
				android:layout_marginTop="20dip" android:background="@drawable/upomp_bypay_btn_enter2"
				android:layout_centerHorizontal="true" />

		</RelativeLayout>

	</ScrollView>
	<com.unionpay.upomp.bypay.view.About
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:paddingBottom="5dip" />
	<RelativeLayout android:id="@+id/main_dialog_onuser_tel"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/rl_header_onuser_tel" android:layout_above="@+id/rl_bottom_onuser_tel" />
	<RelativeLayout android:id="@+id/rl_bottom_onuser_tel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_bottom"
		android:layout_alignParentBottom="true" />
</RelativeLayout>
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:textColor="#6a7482"
					android:layout_centerVertical="true" android:textSize="14sp"
					android:text="@string/upomp_bypay_mobilenum" />
				<TextView android:id="@+id/tv_tel_content_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textColor="#6a7482" android:textSize="14sp"
					android:layout_centerVertical="true" android:gravity="center_vertical"
					android:layout_toRightOf="@+id/tv_tel_title_onuser_usermanage" android:layout_toLeftOf="@+id/btn_tel_onuser_usermanage"/>
				<Button android:id="@+id/btn_tel_onuser_usermanage"
					android:layout_centerVertical="true" android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_alignParentRight="true" android:background="@drawable/upomp_bypay_info_btn4"
					android:layout_marginRight="5dip" />
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1dip" android:background="#dbdee0"
					android:layout_alignParentBottom="true" android:layout_marginLeft="1dip"
					 />
			</RelativeLayout>

			
			<RelativeLayout android:id="@+id/rl_psw_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/rl_tel_onuser_usermanage" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/iv_psw_right_onuser_tle"
					android:layout_width="52dip" android:layout_height="40dip"

					android:background="@drawable/upomp_bypay_info_right"
					android:layout_alignParentRight="true" />

				<TextView android:id="@+id/tv_psw_title_onuser_usermanage"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:textColor="#6a7482"
					android:layout_centerVertical="true" android:textSize="14sp"
					android:text="@string/upomp_bypay_pay_main_user_password" />
				<TextView android:id="@+id/tv_psw_content_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textColor="#6a7482" android:textSize="14sp" android:password="true"
					android:layout_centerVertical="true" android:gravity="center_vertical"
					android:layout_toRightOf="@+id/tv_psw_title_onuser_usermanage" 
					android:layout_toLeftOf="@+id/btn_psw_onuser_usermanage"/>
				<Button android:id="@+id/btn_psw_onuser_usermanage"
					android:layout_centerVertical="true" android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_alignParentRight="true" android:background="@drawable/upomp_bypay_info_btn3"
					android:layout_marginRight="5dip" />
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1dip" android:background="#dbdee0"
					android:layout_alignParentBottom="true" android:layout_marginLeft="1dip"
					 />
			</RelativeLayout>
			<RelativeLayout android:id="@+id/rl_defaultcard_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/rl_psw_onuser_usermanage" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/iv_defaultcard_right_onuser_tle"
					android:layout_width="52dip" android:layout_height="40dip"

					android:background="@drawable/upomp_bypay_info_right"
					android:layout_alignParentRight="true" />

				<TextView android:id="@+id/tv_defaultcard_title_onuser_usermanage"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:textColor="#6a7482"
					android:layout_centerVertical="true" android:textSize="14sp"
					android:text="@string/upomp_bypay_bindcard" />
				<TextView android:id="@+id/tv_defaultcard_content_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textColor="#6a7482" android:textSize="14sp"
					android:layout_centerVertical="true" android:gravity="center_vertical"
					android:layout_toRightOf="@+id/tv_defaultcard_title_onuser_usermanage" 
					android:layout_toLeftOf="@+id/btn_defaultcard_onuser_usermanage"/>
				<Button android:id="@+id/btn_defaultcard_onuser_usermanage"
					android:layout_centerVertical="true" android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_alignParentRight="true" android:background="@drawable/upomp_bypay_info_btn1"
					android:layout_marginRight="5dip" />
			</RelativeLayout>
			
			<ImageView android:id="@+id/iv_bot_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot3"
				android:layout_below="@id/rl_defaultcard_onuser_usermanage"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />

			-->
			
			<RelativeLayout android:id="@+id/rl_change_info_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_below="@id/iv_pay_info_bot_onuser_usermanage" android:layout_marginTop="20dip" 
					android:gravity="center_horizontal">
					<Button android:id="@+id/btn_change_tel_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="#7498ab" android:textSize="18sp"
						
						android:gravity="center" android:text="@string/upomp_bypay_head_changetel"
						android:background="@drawable/upomp_bypay_btn_member1"/>
					<Button android:id="@+id/btn_change_psw_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="#7498ab" android:textSize="18sp" android:layout_toRightOf="@+id/btn_change_tel_onuser_usermanage"
						android:layout_marginLeft="5dip" 
						android:gravity="center" android:text="@string/upomp_bypay_head_changepsw" android:background="@drawable/upomp_bypay_btn_member1"/>
				</RelativeLayout>
			
		
			<Button android:id="@+id/btn_cardmanage_onuser_usermanage"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/upomp_bypay_head_cardmanage" android:textColor="#7498ab"
				android:layout_centerHorizontal="true" android:textSize="18sp"
				android:layout_below="@id/rl_change_info_onuser_usermanage" android:layout_marginTop="8dip"
				android:background="@drawable/upomp_bypay_btn_member2"
				 />
		</RelativeLayout>

	</ScrollView>
	<com.unionpay.upomp.bypay.view.About
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:paddingBottom="5dip" />
<RelativeLayout android:id="@+id/rl_bottom_onuser_usermanage"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_bottom"
		android:layout_alignParentBottom="true">
	</RelativeLayout>
</RelativeLayout>
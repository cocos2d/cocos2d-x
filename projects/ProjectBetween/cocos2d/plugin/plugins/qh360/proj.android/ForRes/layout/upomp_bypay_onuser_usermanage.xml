<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:layout_marginBottom="35dip"
	android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
	android:layout_marginTop="35dip" android:background="@drawable/upomp_bypay_bg">
	<LinearLayout android:focusable="true"
		android:focusableInTouchMode="true" android:layout_width="0dip"
		android:layout_height="0dip" />
<RelativeLayout android:id="@+id/rl_header_onuser_usermanage"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/upomp_bypay_title_bg">
		<Button android:id="@+id/btn_return_onuser_usermanage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/upomp_bypay_btn_title_esc"
			android:layout_alignParentRight="true" android:layout_marginRight="5dip"
			android:layout_marginTop="5dip" android:textColor="#ffffffff"
			android:text="@string/upomp_bypay_return" />
	</RelativeLayout>



	<ScrollView android:id="@+id/sv_onuser_usermanage"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/rl_header_onuser_usermanage"  android:layout_above="@+id/rl_bottom_onuser_usermanage">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/iv_top_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top2"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" />

			<RelativeLayout android:id="@+id/rl_info_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="80dip"
				android:layout_below="@id/iv_top_onuser_usermanage" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_name_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toRightOf="@+id/iv_info_right_onuser_tle">
					<TextView android:id="@+id/tv_name_title_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="10dip" android:textColor="#6a7482"
						android:textSize="14sp" android:text="@string/upomp_bypay_username"
						android:layout_centerVertical="true" />
					<TextView android:id="@+id/tv_name_content_onuser_usermanage"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_toRightOf="@+id/tv_name_title_onuser_usermanage" />
				</RelativeLayout>
				<RelativeLayout android:id="@+id/rl_welcome_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_below="@id/rl_name_onuser_usermanage" android:layout_toRightOf="@+id/iv_info_right_onuser_tle">
					<ImageView android:layout_width="fill_parent"
						android:layout_height="1dip" android:background="#dbdee0"
						android:layout_marginLeft="1dip" />
					<TextView android:id="@+id/tv_welcome_title_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginLeft="10dip" android:textColor="#6a7482"
						android:textSize="14sp" android:text="@string/upomp_bypay_welcome"
						android:layout_centerVertical="true" />
					<TextView android:id="@+id/tv_welcome_content_onuser_usermanage"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_toRightOf="@+id/tv_welcome_title_onuser_usermanage" />
				</RelativeLayout>
				<ImageView android:id="@+id/iv_info_right_onuser_tle"
					android:layout_width="40dip" android:layout_height="80dip"

					android:background="@drawable/upomp_bypay_info_left"
					android:layout_alignParentLeft="true" />
				<ImageView 
					android:layout_width="wrap_content" android:layout_height="wrap_content"
				
					android:layout_centerVertical="true" android:background="@drawable/upomp_bypay_info_icon4"
					android:layout_marginLeft="10dip" />
			</RelativeLayout>


			<ImageView android:id="@+id/iv_bot_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot2"
				android:layout_below="@id/rl_info_onuser_usermanage"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />

			<ImageView android:id="@+id/iv_pay_info_top_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top2"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" android:layout_below="@id/iv_bot_onuser_usermanage" />
			<RelativeLayout android:id="@+id/rl_card_info_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/iv_pay_info_top_onuser_usermanage"
				android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_card_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toRightOf="@+id/iv_card_info_left_onuser_tle">
					<TextView android:id="@+id/tv_card_title_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp" android:text="@string/upomp_bypay_bindcard"
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_marginLeft="5dip"  />

					<TextView android:id="@+id/tv_card_content_onuser_usermanage"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp" 
						android:layout_centerVertical="true" android:gravity="center_vertical"
						android:layout_marginLeft="5dip" android:layout_toRightOf="@+id/tv_card_title_onuser_usermanage" />

				</RelativeLayout>

				<ImageView android:id="@+id/iv_card_info_left_onuser_tle"
					android:layout_width="40dip" android:layout_height="40dip"
					android:background="@drawable/upomp_bypay_info_left" />
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_centerVertical="true"
					android:background="@drawable/upomp_bypay_info_icon3"
					android:layout_marginLeft="10dip" />
			</RelativeLayout>


			<RelativeLayout android:id="@+id/rl_tel_info_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/rl_card_info_onuser_usermanage"
				android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">

				<RelativeLayout android:id="@+id/rl_tel_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="40dip"
					android:layout_toRightOf="@+id/iv_tel_info_right_onuser_tle">
					<TextView android:id="@+id/tv_tel_title_onuser_usermanage"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp"
						android:layout_marginLeft="5dip" android:layout_centerVertical="true"
						android:gravity="center_vertical" android:text="@string/upomp_bypay_mobilenum"/>
					<TextView android:id="@+id/tv_tel_content_onuser_usermanage"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textColor="#6a7482" android:textSize="14sp" android:layout_toRightOf="@+id/tv_tel_title_onuser_usermanage"
						android:layout_marginLeft="5dip" android:layout_centerVertical="true"
						android:gravity="center_vertical" />
				</RelativeLayout>
				

				<ImageView android:id="@+id/iv_tel_info_right_onuser_tle"
					android:layout_width="40dip" android:layout_height="80dip"
					android:background="@drawable/upomp_bypay_info_left" />
				<ImageView android:layout_width="fill_parent"
					android:layout_height="1dip" android:background="#dbdee0"
					android:layout_marginRight="1dip" android:layout_marginLeft="1dip" />
				<Button android:id="@+id/btn_user_manage_onuser_usermanage"
					android:layout_width="wrap_content" android:layout_height="wrap_content"

					android:layout_centerVertical="true" android:background="@drawable/upomp_bypay_info_icon5"
					android:layout_marginLeft="10dip" />
			</RelativeLayout>
			<ImageView android:id="@+id/iv_pay_info_bot_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_bot2"
				android:layout_below="@id/rl_tel_info_onuser_usermanage"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip" />
			
			<!--  

			<ImageView android:id="@+id/iv_top_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/upomp_bypay_info_top1"
				android:layout_marginTop="20dip" android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip" />

			<RelativeLayout android:id="@+id/rl_name_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/iv_top_onuser_usermanage" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
				
				<TextView android:id="@+id/tv_name_title_onuser_usermanage"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dip" android:textColor="#6a7482"
					android:textSize="14sp" android:text="@string/upomp_bypay_username"
					android:layout_centerVertical="true" />
				<TextView android:id="@+id/tv_name_content_onuser_usermanage"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:textColor="#6a7482" android:textSize="14sp"
					android:layout_centerVertical="true" android:gravity="center_vertical"
					android:layout_toRightOf="@+id/tv_name_title_onuser_usermanage" />
				
			</RelativeLayout>


			<RelativeLayout android:id="@+id/rl_tel_onuser_usermanage"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:layout_below="@id/rl_name_onuser_usermanage" android:background="@drawable/upomp_bypay_info_bg"
				android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
				android:gravity="center_vertical">
				<ImageView android:id="@+id/iv_tel_right_onuser_tle"
					android:layout_width="52dip" android:layout_height="40dip"

					android:background="@drawable/upomp_bypay_info_right"
					android:layout_alignParentRight="true" />

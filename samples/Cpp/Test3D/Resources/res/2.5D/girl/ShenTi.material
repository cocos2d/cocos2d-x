material test
{
    technique
    {
        pass 0
        {
            // shaders
            vertexShader = shaders/lightonly_skinned.vsh
            fragmentShader = shaders/lightonly_skinned.fsh            


            // uniforms
            u_worldViewProjectionMatrix = WORLD_VIEW_PROJECTION_MATRIX
            u_inverseTransposeWorldViewMatrix = INVERSE_TRANSPOSE_WORLD_VIEW_MATRIX
            u_worldViewMatrix = WORLD_VIEW_MATRIX           
            u_cameraPosition = CAMERA_VIEW_POSITION

            defines = SKINNING_JOINT_COUNT 32;MAXDIRLIGHT 2;MAXPOINTLIGHT 1
            u_matrixPalette = MATRIX_PALETTE
      
  
            u_ambientColor = 0.7, 0.7, 0.7
            u_lightColor = 0.85, 0.85, 0.85
            u_specularExponent = 32

            
            // samplers
            sampler u_diffuseTexture
            {
                path = 2.5D/girl/ShenTi.png
                mipmap = true
                wrapS = CLAMP
                wrapT = CLAMP
                minFilter = NEAREST_MIPMAP_LINEAR
                magFilter = LINEAR
            }

            // render state
            renderState
            {
               cullFace = false
                depthTest = true

                depthWrite = true
                blend = false
                srcBlend = SRC_ALPHA
                dstBlend = ONE_MINUS_SRC_ALPHA
            }
        }
    }
}
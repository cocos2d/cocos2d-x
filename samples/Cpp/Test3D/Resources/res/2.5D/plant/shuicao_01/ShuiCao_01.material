material test
{
    u_worldViewProjectionMatrix = WORLD_VIEW_PROJECTION_MATRIX
	u_diffuseColor = 1.0, 1.0, 1.0, 1.0

	// samplers
	sampler u_diffuseTexture
	{
		path = 2.5D/plant/ShuiCao_01.png
		mipmap = true
		wrapS = REPEAT
		wrapT = REPEAT
		minFilter = LINEAR_MIPMAP_LINEAR
		magFilter = LINEAR
	}

    technique
	<
		channel = sorted
	>
    {
        pass 0
        {
            // shaders
            vertexShader = shaders/textured.vsh
            fragmentShader = shaders/textured.fsh
            
            // uniforms
            u_inverseTransposeWorldMatrix = INVERSE_TRANSPOSE_WORLD_VIEW_MATRIX
            u_worldMatrix = WORLD_MATRIX  
			
            defines = SKINNING_JOINT_COUNT 32;MAXANIMLIGHT 1
            u_matrixPalette = MATRIX_PALETTE

            // render state
            renderState
            {
                cullFace = false
                depthTest = true

                depthWrite = true
                blend = true
                srcBlend = SRC_ALPHA
                dstBlend = ONE_MINUS_SRC_ALPHA
            }
        }
    }

    technique _castshadow
    {
        pass 0
        {
            // shaders
            vertexShader = shaders/textured.vsh
            fragmentShader = shaders/writedepth.fsh
            
            defines = SKINNING_JOINT_COUNT 32;ALPHAREF 100
            u_matrixPalette = MATRIX_PALETTE
			u_diffuseColor = 1.0, 1.0, 1.0, 1.0
			
            // render state
            renderState
            {
                cullFace = false
                depthTest = true

                depthWrite = true
                blend = false
            }
        }
    }
	
}
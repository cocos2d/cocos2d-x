material 
{

	technique Technique0
	{

		pass Pass0
		{
			vertexShader = shaders/textured.vsh
			fragmentShader = shaders/textured.fsh
			defines = MAXDIRLIGHT 1
			u_diffuseColor = 1,1,1,1
			u_dirlight[0].color = 0,0,1
			u_dirlight[0].dir = 1,1,1
